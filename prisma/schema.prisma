// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id            Int @id @default(autoincrement())
  nombre        String
  apellido      String
  email         String @unique
  contrasenia   String
  ultimo_acceso DateTime?
  nro_puerta    Int?
  localidad   String?
  calle       String?
  descripcion String?
  tipo      type @default(USER)
  cant_intercambio Int @default(0)
  foto_perfil Bytes?
  telefono    String? @unique
  producto    Product[]
}

model Product {
  id          Int @id @default(autoincrement())
  titulo      String
  descripcion String
  tipo_trato  DealType
  cantidad    Int @default(0)
  foto        Bytes
  usuario     User @relation(fields: [userId], references: [id])
  userId     Int @unique
  categoria   CatProduct[]
  catProductId Int @unique
  // intercambio Intercambio? @relation("Intercambio",fields: [id_producto], references: [id])
 }

model Category {
  id          Int @id @default(autoincrement())
  nombre      String @unique
  producto    CatProduct[]
}

model CatProduct {
  id_prod     Int @id @default(autoincrement())
  id_cate     Int
  producto    Product @relation(fields: [id_prod], references: [id])
  categoria   Category @relation(fields: [id_cate], references: [id])
}

model Exchange {
  // producto    Producto @relation(fields: [id_prod1,id_prod2], references: [id])
  id          Int @id @default(autoincrement())
  id_prod1    Int 
  id_prod2    Int 
  estado      State @default(ESPERANDO)
  @@unique([id_prod1,id_prod2])
}

enum type {
  USER
  ADMIN
}

enum DealType {
  INTERCAMBIO
  DONACION
}

enum State {
  ESPERANDO
  ACEPTADO
  RECHAZADO
  CANCELADO
}
